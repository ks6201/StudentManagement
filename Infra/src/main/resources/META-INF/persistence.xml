<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
    <persistence-unit name="StudentMgmtPU">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!--        Entities        -->
        <class>org.assignment.infra.entities.StudentEntity</class>
        <class>org.assignment.infra.entities.CourseEntity</class>
        <class>org.assignment.infra.entities.EnrollmentEntity</class>

        <exclude-unlisted-classes>false</exclude-unlisted-classes>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:h2:file:./Database/student-mgmt;AUTO_SERVER=TRUE"/>
            <property name="jakarta.persistence.jdbc.user" value="sa"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>
            <property name="jakarta.persistence.transactionType" value="RESOURCE_LOCAL"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
<!--            <property name="hibernate.hbm2ddl.auto" value="create"/>-->
            <property name="hibernate.show_sql" value="false"/>
        </properties>
    </persistence-unit>
</persistence>
